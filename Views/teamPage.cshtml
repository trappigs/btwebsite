<script>
// Tüm team-member divlerini seç ve tıklanabilir yap
document.querySelectorAll('.team-member').forEach(member => {
    // Cursor pointer yap
    member.style.cursor = 'pointer';
    
    member.addEventListener('click', function(e) {
        // İçindeki link butonuna tıklanmışsa, bu eventi engelle (çift yönlendirme olmasın)
        if (e.target.closest('.view-details-btn')) {
            return;
        }
        
        // İçindeki linki bul
        const link = this.querySelector('.view-details-btn');
        if (link && link.href) {
            // Linke git
            window.location.href = link.href;
        }
    });
    
    // Hover efekti ekle (isteğe bağlı)
    member.addEventListener('mouseenter', function() {
        this.style.transform = 'translateY(-2px)';
        this.style.transition = 'transform 0.3s ease';
    });
    
    member.addEventListener('mouseleave', function() {
        this.style.transform = 'translateY(0)';
    });
});



</script>