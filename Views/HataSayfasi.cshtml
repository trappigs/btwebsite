@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<HataSayfasi>
@{
    Layout = "masterLayout.cshtml";

    // Hata sayfası için varsayılan metinleri burada tanımlayalım
    var pageTitle = Model.Value("sayfaBasligi", fallback: Fallback.ToDefaultValue, defaultValue: "Aradığınız Sayfayı Bulamadık");
    var pageContent = Model.Value("sayfaIcerigi", fallback: Fallback.ToDefaultValue, defaultValue: "<p>Görünüşe göre yanlış bir yola saptınız. Aradığınız sayfa taşınmış veya hiç var olmamış olabilir.</p>");
}

<div class="error-page-container">
    <div class="container text-center">
        
        <div class="error-visual">
            <svg xmlns="http://www.w3.org/2000/svg" width="120" height="120" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" class="feather feather-compass">
                <circle cx="12" cy="12" r="10"></circle>
                <polygon points="16.24 7.76 14.12 14.12 7.76 16.24 9.88 9.88 16.24 7.76"></polygon>
            </svg>
        </div>

        <h1 class="error-code">404</h1>
        <h2 class="error-title">@pageTitle</h2>
        
        <div class="error-description">
            @Html.Raw(pageContent)
        </div>

        <div class="error-actions">
            <a href="/" class="btn btn-primary btn-lg">Ana Sayfaya Dön</a>
            
            <p class="mt-4 mb-2">Veya aradığınızı bulmak için sitemizde arama yapın:</p>
            
            <form class="error-search-form" action="/arama-sonuclari" method="get">
                <input type="search" name="query" class="form-control" placeholder="Örn: Sındırgı Projesi..." aria-label="Sitede ara">
                <button type="submit" class="btn btn-secondary">Ara</button>
            </form>
        </div>

    </div>
</div>

@* Bu stilleri ana CSS dosyanıza taşımanız en iyi pratiktir. *@
<style>
    .error-page-container {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 70vh;
        padding: 4rem 1rem;
    }

    .error-visual svg {
        color: #045129; /* Marka Rengi */
        opacity: 0.5;
        margin-top: 10rem;
        margin-bottom: 2rem;
        animation: spin 10s linear infinite;
    }

    .error-code {
        font-size: 6rem;
        font-weight: 900;
        color: #045129; /* Marka Rengi */
        margin: 0;
        line-height: 1;
    }

    .error-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-top: 1rem;
        margin-bottom: 1.5rem;
        color: #333;
    }

    .error-description p {
        font-size: 1.1rem;
        color: #666;
        max-width: 600px;
        margin: 0 auto;
    }

    .error-actions {
        margin-top: 2.5rem;
    }

    .error-search-form {
        max-width: 400px;
        margin: 0 auto;
        display: flex;
        gap: 10px;
    }

    .error-search-form .form-control {
        text-align: center;
    }

    /* SVG için basit animasyon */
    @@keyframes spin {
        from {
            transform: rotate(0deg);
        }
        to {
            transform: rotate(360deg);
        }
    }
</style>