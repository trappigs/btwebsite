// Element grubuna stil uygulama - YENİ GÜVENLI VERSIYON
function applyToElements(selectors, styles) {
    selectors.forEach(selector => {
        try {
            const elements = document.querySelectorAll(selector);
            elements.forEach(element => {
                if (element) {
                    element.style.fontFamily = styles.family;
                    element.style.fontWeight = styles.weight;
                    element.style.letterSpacing = styles.spacing;
                    element.style.textTransform = 'uppercase';
                }
            });
        } catch (error) {
            console.warn(`Selector hatası: ${selector}`, error);
        }
    });
}

