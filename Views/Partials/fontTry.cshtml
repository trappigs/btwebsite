        ericaone: "'Erica One', sans-serif",
        vagron: "'Vagron', sans-serif",
        blippo: "'Blippo', sans-serif"
    };
    
    const fontFamily = fontConfigs[fontName];
    if (!fontFamily) return false;
    
    // Canvas ile font test et
    const canvas = document.createElement('canvas');
    const context = canvas.getContext('2d');
    
    // Varsayılan font ile ölçüm
    context.font = '20px monospace';
    const defaultWidth = context.measureText('ABCDEFG').width;
    
    // Test font ile ölçüm
    context.font = `20px ${fontFamily}`;
    const testWidth = context.measureText('ABCDEFG').width;
    
    return defaultWidth !== testWidth;
}

