
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .portfolio-section {
            background-color: #f8f9fa;
            padding: 80px 40px 15px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        .header-content-2 {
            max-width: 1200px;
            margin: 0 auto;
            text-align: left;
        }
        .description{
            margin-bottom: 0px !important;
        }

        .header-content-2 h2 {
            font-size: 3rem;
            color: #2c3e50;
            font-weight: 300;
            margin-bottom: 20px;
            line-height: 1.2;
        }

        .green-line {
            width: 80px;
            height: 4px;
            background-color: #27ae60;
            margin-bottom: 30px;
        }

        .description {
            font-size: 1.1rem;
            color: #666;
            line-height: 1.8;
            max-width: 800px;
        }

        .regions-grid {
            background-color: #2d5a3d;
            padding: 80px 40px;
            margin: 0;
        }

        .grid-container {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 60px 80px;
        }

        .region-item {
            display: flex;
            align-items: flex-start;
            opacity: 0;
            transform: translateY(30px);
            animation: fadeInUp 0.8s ease forwards;
        }

        .region-item:nth-child(1) { animation-delay: 0.1s; }
        .region-item:nth-child(2) { animation-delay: 0.2s; }
        .region-item:nth-child(3) { animation-delay: 0.3s; }
        .region-item:nth-child(4) { animation-delay: 0.4s; }
        .region-item:nth-child(5) { animation-delay: 0.5s; }
        .region-item:nth-child(6) { animation-delay: 0.6s; }
        .region-item:nth-child(7) { animation-delay: 0.7s; }
        .region-item:nth-child(8) { animation-delay: 0.8s; }
        .region-item:nth-child(9) { animation-delay: 0.9s; }

        .location-icon {
            color: #27ae60;
            font-size: 2rem;
            margin-right: 20px;
            margin-top: 5px;
            flex-shrink: 0;
        }

        .region-content h3 {
            color: white;
            font-size: 1.8rem;
            font-weight: 600;
            margin-bottom: 12px;
            letter-spacing: -0.5px;
        }

        .region-content p {
            color: #b8d4c2;
            font-size: 1rem;
            line-height: 1.6;
        }

        @@keyframes fadeInUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@media (max-width: 1024px) {
            .grid-container {
                grid-template-columns: repeat(2, 1fr);
                gap: 40px 60px;
            }
            
            .portfolio-section {
                padding: 60px 30px 0;
            }
            
            .regions-grid {
                padding: 60px 30px;
            }
        }

        @@media (max-width: 768px) {
            .green-line{
                display: none;
            }
            .header-content-2 h2 {
                font-size: 2.2rem;
                text-align: center;
            }
            .description{
                text-align: justify;
            }
            .portfolio-section {
                padding: 40px 20px 15px;
            }

            .regions-grid {
                padding: 40px 20px;
            }

            .grid-container {
                grid-template-columns: repeat(2, 1fr);
                gap: 25px 15px;
            }

            .region-item {
                background: rgba(255, 255, 255, 0.05);
                padding: 20px;
                border-radius: 12px;
                border-left: 3px solid #27ae60;
                transition: transform 0.3s ease, background-color 0.3s ease;
            }

            .region-item:hover {
                transform: translateY(-3px);
                background: rgba(255, 255, 255, 0.08);
            }

            .location-icon {
                font-size: 1.2rem;
                margin-right: 12px;
                margin-top: 2px;
            }

            .region-content h3 {
                font-size: 1.1rem;
                margin-bottom: 6px;
                font-weight: 600;
            }

            .region-content p {
                font-size: 0.85rem;
                line-height: 1.4;
                opacity: 0.9;
            }
        }

        @@media (max-width: 480px) {
            .header-content-2 h2 {
                font-size: 1.9rem;
            }
            .description {
                font-size: 1rem;
            }

            .regions-grid {
                padding: 35px 15px;
            }

            .grid-container {
                grid-template-columns: repeat(2, 1fr);
                gap: 15px 12px;
            }

            .region-item {
                padding: 12px;
                flex-direction: column;
                align-items: center;
                text-align: center;
                min-height: auto;
            }

            .location-icon {
                font-size: 1rem;
                margin-right: 0;
                margin-bottom: 6px;
                margin-top: 0;
            }

            .region-content h3 {
                font-size: 1.2rem;
                margin-bottom: 3px;
                font-weight: 600;
            }

            .region-content p {
                font-size: 0.9rem;
                line-height: 1.2;
                display: -webkit-box;
                -webkit-line-clamp: 2;
                -webkit-box-orient: vertical;
                overflow: hidden;
            }
        }
    </style>
    
